<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Questionnaire" parent="Questionnaire.Base"/>

    <!-- Base application theme. -->
    <style name="Questionnaire.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryLight">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorAccentLight">@color/secondaryLightColor</item>
        <item name="colorAccentDark">@color/secondaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/secondaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">
            @color/primaryDarkColor
        </item>

        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:radioButtonStyle">@style/ButtonStyle.Radio</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <item name="colorLogo">@color/colorLogo</item>
        <item name="colorSeparator">@color/colorSeparator</item>
        <item name="colorGoogleBackground">@color/colorGoogleBackground</item>

    </style>

    <style name="Text" />
    <style name="Text.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:button">@null</item>
    </style>

    <style name="ButtonStyle.Radio" parent="ButtonStyle">
        <item name="android:background">@drawable/selector_checkable</item>
    </style>

</resources>
